<h1><span class="specialMy">My</span> {{#if song}}Songs{{/if}}{{#if artist}}Artists{{/if}}{{#if album}}Albums{{/if}}</h1>
<h2 id="great">You Look Great Today</h2>

<divn id="songBigDiv">{{#unless album}}
    <h2 id="likeDislike">Liked</h2>
    {{#unless liked}}
        <p id="songT">Looks like you don't have any liked {{#if song}}songs{{/if}}{{#if artist}}artists{{/if}} saved </br>&#128532;</p>
    {{else}}
        {{#each liked}}
            <div id="proRecs">
                <span id="songName">{{this.songName}} </span>
                <span id="artistName">{{this.artistName}}</span>
                <form class = "removeForm" action = "/removeSong" method = "POST">
                <input type="text" name = "songName" value ="{{this.songName}}" hidden>
                <input type="text" name = "artistName" value ="{{this.artistName}}" hidden>
                <button class="remove">&#128465;</button>
                </form>
            </div>
        {{/each}}
        {{/if}}

        {{#if artist}}
        {{#each liked}}
            <div id="proRecs">
                <span>{{this.songName}}</span>
                <span>{{this.artistName}}</span>
                <form class = "removeForm" action = "/removeArtist" method = "POST">
                <input type="text" name = "songName" value ="{{this.songName}}" hidden>
                <input type="text" name = "artistName" value ="{{this.artistName}}" hidden>
                <button class="remove">&#128465;</button>
                </form>
            </div>
        {{/each}}
    {{/unless}}
    <h2 id="likeDislike">Disliked</h2>
    {{#unless disliked}}
        <p id="songT">Looks like you don't have any disliked {{#if song}}songs{{/if}}{{#if artist}}artists{{/if}} saved </br>&#128513;</p>
    {{else}}
        {{#each disliked}}
            <div id="proRecs">
                <span id="songName">{{this.songName}}</span>
                <span id="artistName">{{this.artistName}}</span>
                <form class = "removeForm" action = "/removeSong" method = "POST">
                <input type="text" name = "songName" value ="{{this.songName}}" hidden>
                <input type="text" name = "artistName" value ="{{this.artistName}}" hidden>
                <button class="remove">&#128465;</button>
                </form>
            </div>
        {{/each}}
        {{/if}}

        {{#if artist}}
        {{#each disliked}}
            <div id="proRecs">
                <span>{{this.songName}}</span>
                <span>{{this.artistName}}</span>
                <form class = "removeForm" action = "/removeArtist" method = "POST">
                <input type="text" name = "songName" value ="{{this.songName}}" hidden>
                <input type="text" name = "artistName" value ="{{this.artistName}}" hidden>
                <button class="remove">&#128465;</button>
            </div>
        {{/each}}
    {{/unless}}
{{else}}
    {{#unless albumList}}
        <p id="songT">Looks like you don't have any albums saved &#128532;</p>
    {{else}}
        {{#each albumList}}
            <div id="proRecs">
                <span>{{this.albumName}}</span>
                <span>{{this.artistName}}</span>
                <span>Rating: {{this.rating}}</span>
                <a href="/editRating"><button>&#9999; Edit Ranking</button></a>
                <button class="remove">&#128465;</button>
            </div>
        {{/each}}
    {{/unless}}
{{/unless}}</div>
